// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Offer {
  id                                   String   @id @default(cuid())
  offer_number                         Int? // short, unique per shop (1, 2, 3…) for display/search
  name                                 String
  commission_type                      String   @default("flat_rate") // flat_rate, percentage
  amount                               Decimal  @db.Decimal(10, 2)
  currency                             String   @default("USD")
  commission_terms                     String?
  attribution_window_days              Int      @default(90)
  auto_approve_affiliates              Boolean  @default(false)
  selling_subscriptions                String   @default("no") // no, credit_all, credit_none, credit_first_only
  subscription_max_payments            Int? // when credit_first_only: how many rebills to credit
  subscription_rebill_commission_type  String? // flat_rate | percentage
  subscription_rebill_commission_value Decimal? @db.Decimal(10, 2)
  make_private                         Boolean  @default(false)
  hide_referral_links                  Boolean  @default(false)
  hide_coupon_promotion                Boolean  @default(false)
  enable_variable_commission           Boolean  @default(false)
  shopify_shop_id                      String
  created_at                           DateTime @default(now())
  updated_at                           DateTime @updatedAt

  affiliates       Affiliate[]
  affiliate_offers AffiliateOffer[]

  @@unique([shopify_shop_id, offer_number])
  @@index([shopify_shop_id])
}

model AffiliateOffer {
  id           String   @id @default(cuid())
  affiliate_id String
  offer_id     String
  created_at   DateTime @default(now())

  affiliate Affiliate @relation(fields: [affiliate_id], references: [id], onDelete: Cascade)
  offer     Offer     @relation(fields: [offer_id], references: [id], onDelete: Cascade)

  @@unique([affiliate_id, offer_id])
  @@index([affiliate_id])
  @@index([offer_id])
}

model Affiliate {
  id                        String   @id @default(cuid())
  affiliate_number          Int? // short, unique per shop (30483, 30484, …) for display/search
  name                      String // legacy; prefer first_name + last_name
  first_name                String?
  last_name                 String?
  company                   String?
  email                     String   @unique
  paypal_email              String?
  address_line1             String?
  address_line2             String?
  city                      String?
  state                     String?
  zip                       String?
  phone                     String?
  status                    String   @default("active") // active, suspended, banned
  payout_method             String? // paypal, ach_external, invoice
  payout_identifier         String? // paypal email or external ref
  payout_terms_days         Int      @default(30) // Net-30 default
  password_hash             String?
  merchant_id               String? // unique per shop
  offer_id                  String?
  webhook_url               String? // Webhook URL for affiliate partner postbacks
  webhook_parameter_mapping Json? // Maps partner parameters to database fields (e.g., {"sub3": "order_number", "conversion_id": "commission_id"})
  redirect_base_url         String? // Base URL for affiliate redirects
  postback_transaction_id   String? // Captured from URL parameter transaction_id
  postback_affiliate_id     String? // Captured from URL parameter affiliate_id
  postback_sub1             String? // Captured from URL parameter sub1
  postback_sub2             String? // Captured from URL parameter sub2
  postback_sub3             String? // Captured from URL parameter sub3
  postback_sub4             String? // Captured from URL parameter sub4
  shopify_shop_id           String
  created_at                DateTime @default(now())
  updated_at                DateTime @updatedAt

  offer            Offer?                    @relation(fields: [offer_id], references: [id], onDelete: SetNull)
  links            AffiliateLink[]
  clicks           Click[]
  orders           OrderAttribution[]
  commissions      Commission[]
  subscriptions    SubscriptionAttribution[]
  fraud_flags      FraudFlag[]
  affiliate_offers AffiliateOffer[]
  webhook_logs      AffiliateWebhookLog[]

  @@unique([shopify_shop_id, affiliate_number])
  @@unique([shopify_shop_id, merchant_id])
  @@index([shopify_shop_id, status])
  @@index([email])
  @@index([offer_id])
}

model AffiliateLink {
  id              String   @id @default(cuid())
  affiliate_id    String
  destination_url String
  campaign_name   String?
  coupon_code     String?
  shopify_shop_id String
  created_at      DateTime @default(now())

  // Relations
  affiliate Affiliate @relation(fields: [affiliate_id], references: [id], onDelete: Cascade)
  clicks    Click[]

  @@index([affiliate_id])
  @@index([shopify_shop_id])
  @@index([coupon_code])
}

model Click {
  id              String   @id @default(cuid())
  affiliate_id    String
  link_id         String?
  landing_url     String
  ip_hash         String // Hashed IP for privacy
  user_agent_hash String // Hashed user agent
  shopify_shop_id String
  created_at      DateTime @default(now())

  // Relations
  affiliate          Affiliate          @relation(fields: [affiliate_id], references: [id], onDelete: Cascade)
  link               AffiliateLink?     @relation(fields: [link_id], references: [id], onDelete: SetNull)
  order_attributions OrderAttribution[]

  @@index([affiliate_id, created_at])
  @@index([shopify_shop_id, created_at])
}

model OrderAttribution {
  id                   String   @id @default(cuid())
  shopify_order_id     String   @unique
  shopify_order_number String
  affiliate_id         String
  click_id             String?
  attribution_type     String // link, coupon
  shopify_shop_id      String
  customer_email       String? // Customer email from order
  customer_name        String? // Customer name from order
  order_total          Decimal? @db.Decimal(10, 2) // Order total price
  order_currency       String?  @default("USD") // Order currency
  created_at           DateTime @default(now())

  // Relations
  affiliate   Affiliate    @relation(fields: [affiliate_id], references: [id], onDelete: Cascade)
  click       Click?       @relation(fields: [click_id], references: [id], onDelete: SetNull)
  commissions Commission[]

  @@index([shopify_order_id])
  @@index([affiliate_id])
  @@index([shopify_shop_id])
  @@index([customer_email])
}

model CommissionRule {
  id               String   @id @default(cuid())
  name             String
  rule_type        String // flat, percentage
  applies_to       String // one_time, subscription_initial, subscription_rebill
  value            Decimal  @db.Decimal(10, 2) // Flat amount or percentage
  max_payments     Int? // Max commission payments for subscriptions
  max_months       Int? // Max months for subscriptions
  selling_plan_ids String? // JSON array of selling plan IDs
  active           Boolean  @default(true)
  shopify_shop_id  String
  created_at       DateTime @default(now())
  updated_at       DateTime @updatedAt

  @@index([shopify_shop_id, active])
}

model Commission {
  id                   String   @id @default(cuid())
  affiliate_id         String
  shopify_order_id     String
  order_attribution_id String
  amount               Decimal  @db.Decimal(10, 2)
  currency             String   @default("USD")
  status               String   @default("pending") // pending, eligible, approved, paid, reversed
  eligible_date        DateTime // When commission becomes eligible for payout (Net-30)
  rule_snapshot        Json // Snapshot of rule at time of creation
  shopify_shop_id      String
  created_at           DateTime @default(now())
  updated_at           DateTime @updatedAt

  // Relations
  affiliate         Affiliate             @relation(fields: [affiliate_id], references: [id], onDelete: Cascade)
  order_attribution OrderAttribution      @relation(fields: [order_attribution_id], references: [id], onDelete: Cascade)
  postback_logs     PostbackLog[]
  fraud_flags       FraudFlag[]
  payout_runs       PayoutRunCommission[]
  webhook_logs      AffiliateWebhookLog[]

  @@index([affiliate_id, status])
  @@index([shopify_order_id])
  @@index([status, eligible_date])
  @@index([shopify_shop_id, status])
}

model SubscriptionAttribution {
  id                String   @id @default(cuid())
  original_order_id String // First order that created subscription
  affiliate_id      String
  selling_plan_id   String
  interval_months   Int // 1, 3, 6, 12
  max_payments      Int? // From commission rule
  payments_made     Int      @default(0)
  active            Boolean  @default(true)
  shopify_shop_id   String
  created_at        DateTime @default(now())
  updated_at        DateTime @updatedAt

  // Relations
  affiliate Affiliate @relation(fields: [affiliate_id], references: [id], onDelete: Cascade)

  @@unique([original_order_id, selling_plan_id])
  @@index([affiliate_id])
  @@index([shopify_shop_id, active])
}

model PayoutRun {
  id               String   @id @default(cuid())
  period_start     DateTime
  period_end       DateTime
  status           String   @default("draft") // draft, approved, paid
  payout_reference String? // External reference ID
  shopify_shop_id  String
  created_at       DateTime @default(now())
  updated_at       DateTime @updatedAt

  commissions PayoutRunCommission[]

  @@index([shopify_shop_id, status])
}

model PayoutRunCommission {
  id            String   @id @default(cuid())
  payout_run_id String
  commission_id String   @unique
  created_at    DateTime @default(now())

  payout_run PayoutRun  @relation(fields: [payout_run_id], references: [id], onDelete: Cascade)
  commission Commission @relation(fields: [commission_id], references: [id], onDelete: Cascade)
}

model PostbackTemplate {
  id              String   @id @default(cuid())
  name            String
  base_url        String
  param_mappings  Json // JSON mapping of parameter tokens
  trigger_event   String // conversion, approval, payment
  active          Boolean  @default(true)
  shopify_shop_id String
  created_at      DateTime @default(now())
  updated_at      DateTime @updatedAt

  postback_logs PostbackLog[]

  @@index([shopify_shop_id, active, trigger_event])
}

model PostbackLog {
  id                   String   @id @default(cuid())
  commission_id        String
  postback_template_id String
  status               String // success, failed
  response_code        Int?
  response_body        String?
  attempts             Int      @default(1)
  last_attempt_at      DateTime @default(now())
  shopify_shop_id      String
  created_at           DateTime @default(now())

  // Relations
  commission Commission       @relation(fields: [commission_id], references: [id], onDelete: Cascade)
  template   PostbackTemplate @relation(fields: [postback_template_id], references: [id], onDelete: Cascade)

  @@index([commission_id])
  @@index([status, last_attempt_at])
}

model AffiliateWebhookLog {
  id              String   @id @default(cuid())
  commission_id   String
  affiliate_id    String
  webhook_url     String   // The actual URL that was called
  request_method    String   @default("GET")
  request_body     String?  // JSON body if POST request
  request_params   Json?    // The actual parameter values that were sent (for GET requests, extracted from URL)
  response_code    Int?
  response_body    String?
  status           String   @default("pending") // pending, success, failed
  error_message    String?
  attempts         Int      @default(1)
  last_attempt_at  DateTime @default(now())
  shopify_shop_id  String
  created_at       DateTime @default(now())
  updated_at       DateTime @updatedAt

  // Relations
  commission Commission @relation(fields: [commission_id], references: [id], onDelete: Cascade)
  affiliate  Affiliate  @relation(fields: [affiliate_id], references: [id], onDelete: Cascade)

  @@index([commission_id])
  @@index([affiliate_id])
  @@index([status, last_attempt_at])
  @@index([shopify_shop_id])
}

model FraudFlag {
  id              String   @id @default(cuid())
  commission_id   String
  affiliate_id    String
  flag_type       String // self_referral, excessive_clicks, high_refund_rate, coupon_abuse, velocity_anomaly
  score           Int      @default(0) // 0-100 risk score
  reason          String
  resolved        Boolean  @default(false)
  shopify_shop_id String
  created_at      DateTime @default(now())
  updated_at      DateTime @updatedAt

  // Relations
  commission Commission @relation(fields: [commission_id], references: [id], onDelete: Cascade)
  affiliate  Affiliate  @relation(fields: [affiliate_id], references: [id], onDelete: Cascade)

  @@index([commission_id])
  @@index([affiliate_id, resolved])
  @@index([shopify_shop_id, resolved])
}

// Shopify OAuth session storage (for webhook access)
model ShopifySession {
  id                      String    @id
  shop                    String
  state                   String?
  is_online               Boolean   @default(false)
  scope                   String?
  expires                 DateTime?
  access_token            String? // Admin API access token
  storefront_access_token String? // Storefront API access token
  created_at              DateTime  @default(now())
  updated_at              DateTime  @updatedAt

  @@unique([id])
  @@index([shop])
}

// Admin users for standalone authentication
model AdminUser {
  id              String    @id @default(cuid())
  email           String    @unique
  password_hash   String // bcrypt hash
  name            String?
  role            String    @default("admin") // admin, super_admin
  shopify_shop_id String // Single shop this admin manages
  created_at      DateTime  @default(now())
  updated_at      DateTime  @updatedAt
  last_login      DateTime?

  sessions AdminSession[]

  @@index([email])
  @@index([shopify_shop_id])
}

// Admin sessions
model AdminSession {
  id            String   @id @default(cuid())
  admin_user_id String
  token         String   @unique
  expires_at    DateTime
  created_at    DateTime @default(now())

  admin_user AdminUser @relation(fields: [admin_user_id], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([admin_user_id])
}
